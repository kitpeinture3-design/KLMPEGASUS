# ==============================================
# KLM PEGASUS - VARIABLES D'ENVIRONNEMENT
# ==============================================
# Copiez ce fichier vers .env et remplissez vos valeurs

# ======================
# ENVIRONNEMENT
# ======================
NODE_ENV=development
DEBUG=klm:*
LOG_LEVEL=info

# ======================
# BASE DE DONNÉES
# ======================
# PostgreSQL (Base de données principale)
DATABASE_URL="postgresql://postgres:password@localhost:5432/klm_pegasus"

# Redis (Cache et sessions)
REDIS_URL="redis://localhost:6379"

# MongoDB (Analytics - Optionnel)
MONGODB_URL="mongodb://admin:password@localhost:27017/klm_pegasus_analytics"

# ======================
# AUTHENTIFICATION
# ======================
# Secret pour les tokens JWT (CHANGEZ CETTE VALEUR !)
JWT_SECRET="votre-secret-jwt-super-securise-changez-moi-absolument"
JWT_EXPIRES_IN="7d"

# ======================
# OPENAI API
# ======================
# Clé API OpenAI (Obligatoire)
OPENAI_API_KEY="sk-votre-cle-openai-ici"
OPENAI_API_BASE="https://api.openai.com/v1"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ======================
# STRIPE (PAIEMENTS)
# ======================
# Clés Stripe (Obligatoire pour les paiements)
STRIPE_PUBLIC_KEY="pk_test_votre-cle-publique-stripe"
STRIPE_SECRET_KEY="sk_test_votre-cle-secrete-stripe"
STRIPE_WEBHOOK_SECRET="whsec_votre-secret-webhook-stripe"

# ======================
# AWS S3 (STOCKAGE)
# ======================
# Configuration AWS pour le stockage des assets
AWS_ACCESS_KEY_ID="votre-access-key-aws"
AWS_SECRET_ACCESS_KEY="votre-secret-key-aws"
AWS_S3_BUCKET="klm-pegasus-assets"
AWS_REGION="eu-west-1"

# ======================
# EMAIL (SENDGRID)
# ======================
# Configuration SendGrid pour l'envoi d'emails
SENDGRID_API_KEY="SG.votre-cle-sendgrid"
FROM_EMAIL="noreply@klmpegasus.com"
FROM_NAME="KLM Pegasus"

# ======================
# URLS DES SERVICES
# ======================
# URLs des différents services
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"
AI_SERVICE_URL="http://localhost:8001"

# ======================
# SÉCURITÉ
# ======================
# Configuration CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# MONITORING
# ======================
# Sentry pour le tracking des erreurs (Optionnel)
SENTRY_DSN="votre-dsn-sentry"

# Google Analytics (Optionnel)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# ======================
# SERVICES TIERS
# ======================
# Mailchimp pour l'email marketing (Optionnel)
MAILCHIMP_API_KEY="votre-cle-mailchimp"
MAILCHIMP_LIST_ID="votre-liste-id"

# Intercom pour le support client (Optionnel)
INTERCOM_ACCESS_TOKEN="votre-token-intercom"

# ======================
# DÉVELOPPEMENT
# ======================
# Configuration pour le développement local
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_LOGGING=true

# ======================
# PRODUCTION
# ======================
# Variables spécifiques à la production
# (Décommentez et configurez pour la production)

# FRONTEND_URL="https://klmpegasus.com"
# BACKEND_URL="https://api.klmpegasus.com"
# AI_SERVICE_URL="https://ai.klmpegasus.com"
# NODE_ENV="production"
# DEBUG=""

# ======================
# INSTRUCTIONS
# ======================
# 1. Copiez ce fichier vers .env
# 2. Remplissez toutes les valeurs marquées comme "Obligatoire"
# 3. Changez absolument JWT_SECRET par une valeur unique et sécurisée
# 4. Configurez vos clés API (OpenAI, Stripe, AWS, SendGrid)
# 5. Adaptez les URLs selon votre environnement

# ======================
# LIENS UTILES
# ======================
# OpenAI API: https://platform.openai.com/api-keys
# Stripe: https://dashboard.stripe.com/apikeys
# AWS S3: https://console.aws.amazon.com/iam/
# SendGrid: https://app.sendgrid.com/settings/api_keys

